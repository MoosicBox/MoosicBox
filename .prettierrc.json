{
    "bracketSpacing": true,
    "bracketSameLine": false,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "printWidth": 80,
    "plugins": [],
    "overrides": [
        {
            "files": "*.astro",
            "options": {
                "parser": "astro"
            }
        },
        {
            "files": [
                "*.yml",
                "*.yaml"
            ],
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": "*.md",
            "options": {
                "proseWrap": "preserve",
                "printWidth": 999999
            }
        }
    ]
}
