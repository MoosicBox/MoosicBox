{
    "name": "@hyperchad/vanilla-js",
    "description": "HyperChad VanillaJS Library",
    "version": "0.1.0",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MoosicBox/MoosicBox.git"
    },
    "author": "Braden Steffaniak",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/MoosicBox/MoosicBox/issues"
    },
    "homepage": "https://github.com/MoosicBox/MoosicBox#readme",
    "scripts": {
        "build": "tsc",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:unit": "vitest run --project unit",
        "test:browser": "vitest run --project browser",
        "pretty": "prettier --check \"**/*.{js,cjs,mjs,jsx,ts,tsx}\"",
        "pretty:write": "prettier --write \"**/*.{js,cjs,mjs,jsx,ts,tsx}\"",
        "lint": "eslint src tests",
        "lint:write": "eslint src tests --fix",
        "typecheck": "tsc --noEmit",
        "validate": "pnpm typecheck && pnpm lint && pnpm pretty",
        "validate:write": "pnpm typecheck && pnpm lint && pnpm pretty:write && pnpm pretty"
    },
    "type": "module",
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@tsconfig/node18": "18.2.2",
        "@typescript-eslint/eslint-plugin": "^8.53.1",
        "@typescript-eslint/parser": "^8.53.1",
        "@vitest/browser": "^4.0.17",
        "@vitest/browser-playwright": "^4.0.17",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^9.1.2",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-node": "^11.1.0",
        "globals": "^16.5.0",
        "jsdom": "^27.4.0",
        "msw": "^2.12.7",
        "playwright": "~1.56.1",
        "prettier": "^3.8.1",
        "typescript": "^5.9.3",
        "vitest": "^4.0.17"
    }
}
