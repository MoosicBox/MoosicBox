{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "identifier": "com.moosicbox",
    "productName": "MoosicBox",
    "version": "0.1.0",
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "app": {
        "withGlobalTauri": false,
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "MoosicBox",
                "width": 800,
                "height": 600,
                "visible": true
            }
        ],
        "security": {
            "csp": null,
            "assetProtocol": {
                "scope": [
                    "https://*",
                    "http://*",
                    "wss://*",
                    "ws://*"
                ],
                "enable": true
            }
        }
    }
}
